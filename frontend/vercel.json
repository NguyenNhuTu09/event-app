{
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "devCommand": "cd frontend && npm run dev",
    "installCommand": "cd frontend && npm install",
    "headers": [
        {
            "source": "/(.*\\.css)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ]
}
